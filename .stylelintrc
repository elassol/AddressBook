{
  "processors": [
    "stylelint-processor-styled-components"
  ],
  "extends": [
     "stylelint-config-recommended",
      "stylelint-config-styled-components"
  ],
  "rules": {
     "indentation": [
      2,
      {
        "except": ["block"],
        "message": "Please use 2 spaces for indentation.",
        "severity": "warning"
      }
    ]
  }
}